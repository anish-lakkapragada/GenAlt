{
  "manifest_version": 2,
  "version": "0.1",
  "name": "GenAlt",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/main.js"],
      "all_frames": true
    }
  ], 
  "permissions": [
    "storage"
  ], 
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup/public/index.html",
    "default_title": "GenAlt"
  }
}
